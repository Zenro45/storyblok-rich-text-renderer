    "esbuild": "^0.12.16",
    "esmon": "^1.0.4",
    "fs-extra": "^10.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "rollup": "^2.54.0",
    "rollup-plugin-esbuild": "^4.5.0",
    "typescript": "^4.3.5"
  }
}
